<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
  <definition name="tempLayout1" template="/WEB-INF/layout/layout1.jsp">
     <put-attribute name="top" value="/WEB-INF/layout/top.jsp" />
   <put-attribute name="menu" value="/WEB-INF/layout/menu.jsp" />
    <put-attribute name="body" value="/WEB-INF/layout/body.jsp" />
    <put-attribute name="bottom" value="/WEB-INF/layout/bottom.jsp" />
  </definition>
  <definition name="tempLayout2" template="/WEB-INF/layout/layout2.jsp">
    <put-attribute name="top" value="/WEB-INF/layout/top.jsp" />
    <put-attribute name="menu" value="/WEB-INF/layout/menu.jsp" />
    <put-attribute name="body" value="/WEB-INF/layout/body.jsp" />
  </definition>
  <definition name="popLayout" template="/WEB-INF/layout/layoutpop.jsp">
  </definition>
  
  <!-- <definition name="layoutPopup" template="/WEB-INF/layout/layoutpopup.jsp">
    <put-attribute name="title" value="Board Answer List" />
     <put-attribute name="body" value="/WEB-INF/layout/body.jsp" />
  </definition> -->
  
  <definition name="main.tiles" extends="tempLayout1">
  	<put-attribute name="body" value="/WEB-INF/layout/body.jsp"/>
  </definition>
 
  <!-- wild card -->
  <definition name="/1/*/*" extends="tempLayout1">
    <put-attribute name="body"   value="/WEB-INF/{1}/{2}.jsp"/>
  </definition>
  <definition name="/2/*/*" extends="tempLayout2">
    <put-attribute name="body"   value="/WEB-INF/{1}/{2}.jsp"/>
  </definition> 
  <definition name="/pop/*/*" extends="popLayout">
    <put-attribute name="body"   value="/WEB-INF/{1}/{2}.jsp"/>
  </definition> 
  
</tiles-definitions>









